
local Plrs = game.Players:GetChildren()

	for i=1, #Plrs do

		if string.find(string.lower(Plrs[i].Character.Humanoid.DisplayName),string.lower(Plr)) then

			Plr = Plrs[i].Name

		end

	end

	local Plr = game.Players:FindFirstChild(Plr)

	-- Varibles

	local Hunger = 100
	local Max = 100
	local Tiredness = 100
	local TMax = 100
	local Following = false
	local Sleeping = false

	-- Settings

	local Settings = {

		Hungery = 0.03;
		FoodRarity = 6;
		Yummy = 25;
		Tired = 0.4;
		Sleeper = 0.2;

	}

	-- Functions

	local function Sound(Id,Parent)

		local Snd = Instance.new("Sound",Parent)
		Snd.SoundId = "rbxassetid://" .. Id
		Snd:Play()
		Snd.Ended:Connect(function()

			wait(2)
			Snd:Destroy()

		end)

	end

	-- Main

	Hunger = Max
	Tiredness = TMax

	local Item = Instance.new("Tool")

	Item.Parent = Plr.Backpack
	Item.Name = "Chicken"
	Item.ToolTip = "ðŸ”_BaconX"
	Item.TextureId = "http://www.roblox.com/asset/?id=630051936"
	Item.RequiresHandle = false
	Item.CanBeDropped = false

	local Handle = Instance.new("Part")

	Handle.Parent = Item
	Handle.Name = "Handle"
	Handle.Size = Vector3.new(1,2.1,1)

	local Mesh = Instance.new("SpecialMesh")

	Mesh.Parent = Handle
	Mesh.MeshType = Enum.MeshType.FileMesh
	Mesh.TextureId = "rbxassetid://2114220248"
	Mesh.MeshId = "rbxassetid://2114220154"

	Item.Activated:Connect(function()

		if Plr.Character:FindFirstChild("UpperTorso") then

			Item:Destroy()
			return

		end

		Handle.Parent = game.Workspace
		Handle.CanCollide = true
		Handle.Name = Plr .. "'s Chicken"
		Handle:BreakJoints()
		Item:Destroy()

		Plr.Character.Humanoid.Died:Connect(function()

			Sound("8765531823",Handle)
			wait(0.4)
			repeat

				wait(0.01)
				Handle.Transparency = Handle.Transparency + 0.2

			until Handle.Transparency > 0.8
			Handle.Transparency = 1
			Handle.Anchored = true
			wait(7)
			Handle:Destroy()

		end)

		local Gui = Instance.new("ScreenGui",Plr.PlayerGui)

		local Red = Instance.new("Frame",Gui)
		Red.Size = UDim2.new(0.5,0,0.05,0)
		Red.Position = UDim2.new(0.25, 0,0.05, 0)
		Red.BackgroundColor3 = Color3.new(1,0,0)
		local Round = Instance.new("UICorner",Red)

		local Green = Instance.new("Frame",Gui)
		Green.Size = UDim2.new(0.5,0,0.05,0)
		Green.Position = UDim2.new(0.25, 0,0.05, 0)
		Green.BackgroundColor3 = Color3.new(0,1,0)
		local Round = Instance.new("UICorner",Green)

		local HungerText = Instance.new("TextLabel",Gui)
		HungerText.Size = UDim2.new(0.5,0,0.05,0)
		HungerText.Position = UDim2.new(0.25, 0,0.05, 0)
		HungerText.BackgroundColor3 = Color3.new(0,1,0)
		HungerText.Text = "Hunger"
		HungerText.Font = Enum.Font.FredokaOne
		HungerText.BackgroundTransparency = 1
		HungerText.TextColor3 = Color3.new(1,1,1)

		local TRed = Instance.new("Frame",Gui)
		TRed.Size = UDim2.new(0.5,0,0.05,0)
		TRed.Position = UDim2.new(0.25, 0,0.15, 0)
		TRed.BackgroundColor3 = Color3.new(1,0,0)
		local TRound = Instance.new("UICorner",TRed)

		local TGreen = Instance.new("Frame",Gui)
		TGreen.Size = UDim2.new(0.5,0,0.05,0)
		TGreen.Position = UDim2.new(0.25, 0,0.15, 0)
		TGreen.BackgroundColor3 = Color3.new(0,1,0)
		local TRound = Instance.new("UICorner",TGreen)

		local TiredText = Instance.new("TextLabel",Gui)
		TiredText.Size = UDim2.new(0.5,0,0.05,0)
		TiredText.Position = UDim2.new(0.25, 0,0.15, 0)
		TiredText.BackgroundColor3 = Color3.new(0,1,0)
		TiredText.Text = "Energy"
		TiredText.Font = Enum.Font.FredokaOne
		TiredText.TextScaled = true
		TiredText.BackgroundTransparency = 1
		TiredText.TextColor3 = Color3.new(1,1,1)
		TiredText.ZIndex = 10

		HungerText.Changed:Connect(function(Thing)

			if Thing == "TextScaled" then

				repeat

					wait(math.random(1,Settings.FoodRarity))
					local Food = Instance.new("Part")
					Food.Parent = Plr.Character
					Food.Name = "Chicken Food"
					Food.Position = Handle.Position + Vector3.new(math.random(-50,50),0,math.random(-50,50))
					Food.Material = Enum.Material.Pebble
					Food.Color = Color3.new(0.509804, 0.215686, 0.156863)
					Food.Size = Vector3.new(0.3,0.3,0.3)
					Food.Touched:Connect(function(Prt)

						if Prt.Name == Handle.Name then

							Food:Destroy()
							Sound("16213987",Handle)
							Hunger = Hunger + Settings.Yummy
							if Hunger > Max then

								Hunger = Max

							end

						end

					end)

				until Hunger < 1 or Plr.Character.Humanoid.Health == 0

			end

		end)

		HungerText.TextScaled = true

		local Follow = Instance.new("TextButton",Gui)
		Follow.Size = UDim2.new(0.2,0,0.1,0)
		Follow.Position = UDim2.new(0.1,0,0.8,0)
		Follow.Text = "Follow"
		Follow.Font = Enum.Font.FredokaOne
		Follow.TextScaled = true
		Follow.BackgroundColor3 = Color3.new(0.639216, 0.639216, 0.639216)
		Follow.TextColor3 = Color3.new(1, 1, 1)
		local Round = Instance.new("UICorner",Follow)
		local OldPos = Vector3.new(0,0,0)
		Follow.MouseButton1Click:Connect(function()

			if Following == false then
				if Sleeping == true then Sleeping = false end
				Following = true
				Follow.Text = "Unfollow"
				local Move = Instance.new("BodyPosition")
				Move.D = 2000
				Move.Parent = Handle
				Move.Position = OldPos
				repeat

					wait(0.01)
					if Tiredness > 1 then

						Handle.Orientation = Plr.Character.Head.Orientation
						Tiredness = Tiredness - Settings.Tired
						TGreen.Size = UDim2.new(Tiredness / 200,0,TGreen.Size.Y.Scale,0)
						Move.Position = Plr.Character.Torso.Position + (Plr.Character.Torso.CFrame.LookVector * -3) - Vector3.new(0,1.2 + (Handle.Size.Y - 1.1),0)

					else

						Tiredness = 0
						Move.Position = Handle.Position
						TGreen.Size = UDim2.new(0,0,TGreen.Size.Y.Scale,0)

					end

				until Following == false

				OldPos = Move.Position
				Move:Destroy()
				Follow.Text = "Follow"
			else

				Following = false

			end

		end)

		local Sleep = Instance.new("TextButton",Gui)
		Sleep.Size = UDim2.new(0.2,0,0.1,0)
		Sleep.Position = UDim2.new(0.7,0,0.8,0)
		Sleep.Text = "Sleep"
		Sleep.Font = Enum.Font.FredokaOne
		Sleep.TextScaled = true
		Sleep.BackgroundColor3 = Color3.new(0.168627, 0.137255, 0.576471)
		Sleep.TextColor3 = Color3.new(0.576471, 0.545098, 0.647059)
		local Round = Instance.new("UICorner",Sleep)

		Sleep.MouseButton1Click:Connect(function()

			if Sleeping == false then

				if Following == true then Following = false end

				Sleeping = true
				Sleep.Text = "Wake up"
				if math.random(1,5) == 1 then
					Sound("7147215136",Handle)
				else
					Sound("1841220760",Handle)
				end
				local Snd = Instance.new("Sound",Handle)
				Snd.SoundId = "rbxassetid://8191363542"
				Snd.Looped = true
				Snd.Volume = 0.5
				Handle.Orientation = Vector3.new(90,0,0)
				Handle.Anchored = true
				Snd:Play()
				repeat

					wait(0.01)
					Tiredness = Tiredness + Settings.Sleeper
					if Tiredness > TMax then

						Tiredness = TMax

					end
					TGreen.Size = UDim2.new(Tiredness / 200,0,TGreen.Size.Y.Scale,0)

				until Sleeping == false

				Snd:Destroy()
				Sleep.Text = "Sleep"
				Handle.Anchored = false
				Handle.Orientation = Vector3.new(0,math.random(-180,180),0)

			else

				Sleeping = false

			end

		end)

		Handle.Touched:Connect(function(Part)

			if Part.Parent:FindFirstChild("Humanoid") and Part.Parent.Name ~= Plr then

				Part.Parent.Humanoid.Sit = true
				Part.Parent.Humanoid:TakeDamage(5)

			end

		end)
		repeat

			wait(0.01)
			if Sleeping == false then
				Hunger = Hunger - Settings.Hungery
			else
				Hunger = Hunger - (Settings.Hungery / 2)
			end
			Green.Size = UDim2.new(Hunger / 200,0,Green.Size.Y.Scale,0)

		until Hunger < 1 or Plr.Character.Humanoid.Health == 0

		Sleeping = false
		Following = false
		Gui:Destroy()
		Sound("4809574295",Handle)
		Handle.Anchored = true
		Handle.Size = Vector3.new(1,0.1,1)
		game.Chat:Chat(Handle,"*Dies*",Enum.ChatColor.White)
		wait(3)
		repeat

			wait(0.01)
			Handle.Transparency = Handle.Transparency + 0.02

		until Handle.Transparency > 0.98
		Handle:Destroy()

	end)
